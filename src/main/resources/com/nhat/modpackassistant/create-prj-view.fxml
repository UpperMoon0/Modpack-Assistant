<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nhat.modpackassistant.controller.CreatePrjController"
            prefHeight="800.0" prefWidth="600.0"
            stylesheets="@css/right-screen.css">

    <Label fx:id="projectNameLabel" text="Project name:" layoutX="20" layoutY="20" />
    <TextField fx:id="projectNameField" layoutX="20" layoutY="40" prefWidth="200" />
    <Label fx:id="projectLocLabel" text="Project location:" layoutX="20" layoutY="70" />
    <TextField fx:id="projectLocField" layoutX="20" layoutY="90" prefWidth="200" />
    <Label fx:id="fullPathLabel" text="The full path will be:" layoutX="20" layoutY="120" />
    <Label fx:id="fullPath" text="NA" layoutX="130" layoutY="120" />

    <Button fx:id="createButton" text="Create" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" />
    <Button fx:id="backButton" text="Back" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" />
</AnchorPane>